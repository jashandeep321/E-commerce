<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .img-wrapper {
            position: relative;
            display: inline-block;
            width: 120px;
            height: 120px;
            margin: 10px;
        }

        .img-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 5px;
        }

        .img-wrapper input[type="checkbox"] {
            position: absolute;
            top: 5px;
            right: 5px;
            z-index: 2;
        }

        .form-box {
            max-width: 700px;
            margin: auto;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container my-5">
        <a href="/" class="btn btn-outline-secondary mb-4">‚Üê Back to Home</a>

        <div class="card shadow p-4 form-box">
            <h3 class="mb-4 text-center text-primary">Edit Product</h3>

            <form action="/editproduct_submit" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="productID" value="<%= product.productID %>">

                <!-- Existing Images -->
                <h4 style="margin-top: 20px;">Delete Existing Image(s)</h4>
<div style="display: flex; flex-wrap: wrap; gap: 10px;">
    <% if (product.productImages && product.productImages.length > 0) { %>
        <% product.productImages.forEach((img, index) => { %>
            <div style="position: relative; display: inline-block;">
                <img src="/uploads/<%= img %>" style="width: 100px; height: 100px; object-fit: cover; border: 1px solid #ccc; border-radius: 5px;">
                <input type="checkbox" name="deleteImages" value="<%= img %>"
                    style="position: absolute; top: -5px; right: -5px; width: 20px; height: 20px;">
            </div>
        <% }) %>
    <% } else { %>
        <p>No images available.</p>
    <% } %>
</div>

                <!-- Upload new images -->
                <div class="mb-4">
                    <label for="productImages" class="form-label">Upload New Images</label>
                    <input class="form-control" type="file" name="productImages" id="productImages" multiple>
                </div>

                <!-- Other Fields -->
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Product Name</label>
                        <input class="form-control" type="text" name="productName" value="<%= product.productName %>">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Brand</label>
                        <input class="form-control" type="text" name="productBrand" value="<%= product.productBrand %>">
                    </div>
                    <div class="col-12">
                        <label class="form-label">Details</label>
                        <textarea class="form-control" name="productDetails" rows="3"><%= product.productDetails %></textarea>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">MRP</label>
                        <input class="form-control" type="text" name="productMRP" value="<%= product.productMRP %>">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Price</label>
                        <input class="form-control" type="text" name="productPrice" value="<%= product.productPrice %>">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Category</label>
                        <input class="form-control" type="text" name="productCatogory" value="<%= product.productCatogory %>">
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4">Update Product</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
